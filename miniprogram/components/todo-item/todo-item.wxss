/* components/todo-item/todo-item.wxss */
.todo-item {
  display: flex;
  background: #FFF;
  border-left: 50rpx solid red;
  font-size: 32rpx;
  padding: 22rpx 15rpx; 
  
  /* border-bottom: 1rpx dashed #f0f3ff;  */
}
.container{
  display: flex;
  flex-direction:column;
}
.out_score{
  color:#6fa9c4;
  margin-left: 45rpx;
  border-radius: 50rpx;
  width: 30rpx;
  height: 20rpx;
  font-size: 30rpx;
  border-bottom-left-radius: 10px;
  padding: 15rpx;
}
.todo-item__date {
  font-size: 20rpx;
  color: #ccc;
  display: inline-block;
  height: 5rpx;
  padding: 15rpx;
}
.todo-item--level1 {
  border-left-color: red;
}
.todo-item--level2 {
  border-left-color: #FDC533;
  
}
.todo-item--level3 {
  border-left-color: #5872DE;
}
.todo-item--level4 {
  border-left-color: #A3ABAE;
}

.todo-item__col1 {
  flex: 1;
}

.todo-item__col2 {
  flex: 7;
  height: 80rpx;
  
}

.todo-item__col3 {
  flex: 2;
}

.todo-item__checkbox {
  display: inline-block;
  padding: 0 32rpx 0 20rpx;
  padding-bottom: 4px;
  vertical-align: middle;
  width: 30rpx;
  margin-top: 15rpx;
}

.todo-item__icon {
  color: white !important;
  border: 5rpx solid #5872DE;
  vertical-align: middle;
  padding: 3rpx;
  
}

.todo-item__title {
  color: #2C323F;
  display: inline-block;
  vertical-align: middle;
  width: 300rpx;
  height: 80rpx;
}

.todo-item--completed .todo-item__title {
  color: #C1C5C8;
}

