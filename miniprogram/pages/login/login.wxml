<!--pages/login/login.wxml-->

<view class="v1">
 <!-- v2父容器  子view使用绝对布局 -->
   <view class="v2">
     <view class="dltext">登录</view>
  
     <!-- 手机号 -->
     <view class="phoneCs">
       <image src="/ico/phone.ico" class="ph"></image>
       <input placeholder="请输入手机号" />
     </view>
     <!-- 密码 -->
    <view class=passwordCs">
      <image src="/ico/lock.ico" class="ps"></image>
      <input placeholder="请输入密码" />
      <image src="/ico/睁眼.ico" class="eye"></image>
    </view>
 
    <!-- 注册 和忘记密码  -->
    <view class="zhuce">
      <navigator>立即注册</navigator>
      <navigator>忘记密码?</navigator>
    </view>
     <!-- 登录按钮 -->
     <view class="denglu">
      <button bindtap="getUserInfo">log in</button>
     </view>
  
     <!-- 协议区  xieyi -->
     <view class="xieyi">
       <checkbox class="isXY"></checkbox>
       <view class="text-xy">同意小程序的《使用协议》</view>
     </view>
   </view>
 
 </view>
 