<view class='container'>

<!--头像名称-->
<view class="partOne">
  
  <view class="userinfo">
    <block wx:if="{{canIUseOpenData}}">
      <view class="userinfo-avatar">
        <open-data type="userAvatarUrl"></open-data>
      </view>
      <open-data type="userNickName"></open-data>
    </block>
    <block wx:elif="{{!hasUserInfo}}">
      <button wx:if="{{canIUseGetUserProfile}}" bindtap="getUserProfile"> 获取头像昵称 </button>
      <button wx:elif="{{canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
      <view wx:else> 请使用1.4.4及以上版本基础库 </view>
    </block>
    <block wx:else>
      <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>

  <view class="scanicon">
    <image src="../../images/scan.png" />
  </view>
</view>

<!--我的积分-->
<view class="partTwo">
  <!--我的分值-->
  <view class="item">
    <view class="itemname">
      <image class="icon" src="../../ico/积分.ico"></image>
      <view><text class="title">score</text></view>
    </view>
    <view class="right"><image src="../../images/right.png" /></view>
  </view>
</view>
<view class="partTwoR">
  <!--今日任务总数-->
  <view class="item">
    <view class="itemname">
      <image class="icon" src="../../ico/完成任务.ico"></image>
      <view><text class="title">task</text></view>
    </view>
  </view>
</view>
<!--关于我们、使用帮助、绑定个人信息-->
<view class="partThree">
  <view class="chart">
   <ec-canvas id="thermodynamic-chart" canvas-id="thermodynamic-chart" ec="{{ ec }}"></ec-canvas>
  </view>
</view>

</view>

